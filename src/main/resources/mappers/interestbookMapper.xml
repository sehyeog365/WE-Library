<?xml version="1.0" encoding="UTF-8"?>

 <!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.marondal.welibrary.book.interest.dao.InterestDAO">
  
  <!-- 관심도서 추가 -->
  <insert id ="insertInterest" parameterType="int">
  	INSERT INTO
  		`interest_book`
  		(
  			`userId`
  			, `bookId`
  			, `createdAt` 
		    , `updatedAt`
  		)
  		VALUES
  		(
			#{userId}  			
  			, #{bookId}
  			, now()
  			, now()	
  		)
  </insert>
   
  <!-- 관심도서 조회 -->
  <select id ="selectInterestList" resultType="com.marondal.welibrary.book.model.InterestBook" parameterType="int" >
  	SELECT
  		`id`
  		, `userId`
  		, `bookId`
  		, `createdAt`
  	FROM
  		`interest_book`
  	WHERE
  		`userId`=#{userId}
  	ORDER BY
  		`id` DESC;
  </select>

  <!-- 관심도서 개수 -->
  <select id="selectInterestBookCount" resultType="int" parameterType="int">
  	SELECT
  		count(1)
  	FROM
  		`interest_book`
  	WHERE
  		`userId`=#{userId}
  </select>

  <!-- 관심도서 개수 표시 일부러 안함 -->
  
  <!-- 관심도서 삭제 -->
  <delete id="deleteInterest" parameterType="int">
  	DELETE
  	FROM `interest_book`
  	WHERE `id` = #{id}
  </delete>

  </mapper>